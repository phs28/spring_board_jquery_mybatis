<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.BoardMapper">
  
  <select id="getList" resultType="org.zerock.vo.BoardVO">
  	<![CDATA[
  		SELECT 
  			* 
  		FROM 
  			tbl_board 
  		WHERE bno > 0
  		ORDER BY bno DESC
  	]]>
  </select>
  
  <insert id="insertSelectKey">
  	<selectKey keyProperty="bno" order="BEFORE" resultType="long">
  		SELECT
  			NVL(MAX(bno)+1, 1)
  		FROM
  			tbl_board
  	</selectKey>
  	<![CDATA[
  		INSERT INTO
  			tbl_board
  			(
  				bno,
  				title,
  				content,
  				writer
  			)
  		VALUES
  			(
  				#{bno},
  				#{title},
  				#{content},
  				#{writer}
  			)
  	]]>
  </insert>
  
  <select id="read" resultType="org.zerock.vo.BoardVO">
  	<![CDATA[
  		SELECT
  			*
  		FROM
  			tbl_board
	  	WHERE bno=#{bno}
	]]>
  </select>
  
  <delete id="delete">
  	<![CDATA[
  		DELETE 
  		FROM
  			tbl_board
  		WHERE bno=#{bno}
  	]]>
  </delete>
  
  <update id="update">
  	<![CDATA[
  		UPDATE 
  			tbl_board
  		SET	
  			title=#{title},
  			content=#{content},
  			writer=#{writer},
  			updateDate=sysdate
  		WHERE bno=#{bno}
  	]]>
  </update>
  
</mapper>
